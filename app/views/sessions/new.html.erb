<section class="login">
  <%= render partial: "shared/error" %>
  <%= form_tag login_path do %>
    <%= email_field_tag :email, nil, required: true, placeholder: "Email" %>

    <%= password_field_tag :password, nil, required: true, placeholder: "Password" %>

    <%= submit_tag "Log in" %>
  <% end %>

  <%= link_to "Don't have an account?", new_user_path %>
</section>

